<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ClosedEstablishmentActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closed"
        android:layout_width="250dp"
        android:layout_height="198dp"
        android:src="@drawable/img_closed"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvClosed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvClosed"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/closed_establishment"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/closed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvClosed2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="@string/closed_establishment2"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@+id/tvClosed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMenu"
        style="@style/ButtonsStyle"
        android:text="Voltar ao menu"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClosed"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
