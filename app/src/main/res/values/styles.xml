<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos Genéricos -->

    <style name="ButtonOpening">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">@drawable/button_opening</item>
        <item name="android:padding">40px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:padding">40px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ContainerSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">475dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Estilos para a Página inicial do Cliente -->

    <style name="ContainerOptions">
        <item name="android:elevation">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/button_options</item>
    </style>

    <style name="IconsOptions">
        <item name="android:elevation">12dp</item>
        <item name="layout_constraintVertical_bias">0.35</item>
        <item name="android:layout_width">57.6dp</item>
        <item name="android:layout_height">51.2dp</item>
    </style>

    <style name="StringsOptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintVertical_bias">0.85</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para o botão da caixa de diálogo -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_dialog</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  estilo necessário para atividade opening,
                já que pedia um tema descendente de AppCompat  -->
    </style>
</resources>
