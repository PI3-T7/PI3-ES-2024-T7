<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerOpening">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="ButtonOpening">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">@drawable/button_opening</item>
        <item name="android:padding">40px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:padding">40px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ContainerSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">475dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- estilo necessário para atividade opening,
        já que pedia um tema descendente de AppCompat -->
    </style>


</resources>