<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projeto_Smart_Locker"
        tools:targetApi="31">
        <activity
            android:name=".RotaActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CartaoCadastrandoActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ClientMainScreenActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Forget_activity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".VerifyActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Opening"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAPS_API_KEY}" />
    </application>

</manifest>